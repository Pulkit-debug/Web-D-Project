<% if(locals.user) { %>

<div class="chat-icon">
  <i class="fas fa-comments"></i>
</div>

<div class="chat-box" id="user-chat-box">
  <ul id="message-list-container">
    <li class="other-message">
      <span> other message</span>
    </li>
    <li class="self-message">
      <span> self message</span>
    </li>
  </ul>

  <div id="input-field">
    <input id="message-input" type="text" />
    <button id="send-message">Submit</button>
  </div>
</div>

<!-- <div id="user-chat-box">
  </div> -->

<% } %>

<script src="<%= assetPath('js/chatbox.js') %> "></script>
