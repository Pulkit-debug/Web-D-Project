    <div id="brand-name">
      <h2>Get Social</h2>
    </div>
    <% if(!locals.user){ %>

    <div class="sign-options">
      <li>
        <a href="/users/signin">Sign in</a>
      </li>
      <li>
        <a href="/users/signup">Sign Up</a>
      </li>
    </div>

    <% } %> <% if(locals.user){ %>

    <div id="user-profile-data" class="sign-options">
