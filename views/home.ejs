<!-- Using express-ejs-layouts here  check layout.ejs file -->
<h1>This is Home Page</h1>

<section id="feed-posts">
  <h4>Posts</h4>

  <% if(locals.user) { %>

  <form action="/posts/create" id="post-form" method="POST">
    <textarea
      name="content"
      id=""
      cols="30"
      rows="5"
      placeholder="Type Here.."
    ></textarea>
    <input type="submit" value="Post" />
  </form>

  <% } %>

  <div id="posts-lists-container">
    <ul>
      <% for(post of posts) { %>

      <li>
        <h3 style="margin: 0"><%= post.content %></h3>

        <small><%= post.user.name%> </small>
      </li>

      <% } %>
    </ul>
  </div>
</section>
