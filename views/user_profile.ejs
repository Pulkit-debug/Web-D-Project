<link rel="stylesheet" href="<%= assetPath('css/user_profile.css') %> " />

<!-- TODO: Show the preview of this image before submitting and obviously improve css -->


<% if(user.id == profile_user.id){ %>
<!-- if user matches then show the form -->
<div class="container">
<img src="<%= user.avatar %>" alt="<%= user.name %>" width="100" />

  <form
    action="/users/update/<%= profile_user.id %>"
    enctype="multipart/form-data"
    method="POST"
  >
    <label for="name">Your Name</label>
    <input
      type="text"
      name="name"
      placeholder="Your Name..."
      value="<%= profile_user.name %>"
      required
    />
    <br>
    <label for="email">Your Email</label>
    <input
    type="email"
    name="email"
    placeholder="Your Email..."
    value="<%= profile_user.email %>"
    required
    />
    <br>

    <input type="file" name="avatar" placeholder="Profile Picture" />

    <br>
    <input type="submit" value="Update" />
  </form>
</div>

  
  
</form>

<%}else{%>
<!-- else show only the profile info -->
<p><%= profile_user.name %></p>
<p><%= profile_user.email %></p>

<a href="/friends/add/<%= profile_user._id %>" id="add-friend-button"
  >Add Friend</a
>

<% } %>

<script src="<%= assetPath('js/user_friends.js') %> "></script>
